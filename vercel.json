{
  "version": 2,
  "builds": [
    {
      "src": "api/backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "AMIRE/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/backend"
    },
    {
      "source": "/(.*)",
      "destination": "/AMIRE/index.html"
    }
  ]
}